<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sendbird.datinglab">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_sendbird_purple"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_sendbird_purple"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sendbird.datinglab.activities.SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sendbird.datinglab.activities.MainActivity"
            android:theme="@style/BlackStatusBar"/>
        <activity
            android:name="com.sendbird.datinglab.activities.CustomMemberListActivity"
            android:theme="@style/BlackStatusBar"/>
        <activity
            android:name="com.sendbird.datinglab.activities.LoginActivity"
            android:theme="@style/BlackStatusBar"/>
    </application>

</manifest>